@model BankApp.Helpers.PaginatedList<BankApp.Models.Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<div class="container mt-4">
    <h1 class="display-6 mb-3">Transactions</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">+ Create New Transaction</a>
    </div>

    <form asp-action="Index" method="get" class="row g-3 align-items-center mb-4">
        <div class="col-md-4">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search Transaction #" />
        </div>
        <div class="col-md-3">
            @Html.DropDownList("transactionTypeFilter", new SelectList(Enum.GetValues(typeof(BankApp.Enums.TransactionType))), "All Types", new { @class = "form-control" })
        </div>
        <div class="col-md-2">
            @Html.DropDownList("pageSizeID", ViewData["pageSizeID"] as SelectList, new { @class = "form-control", onchange = "this.form.submit();" })
        </div>
        <div class="col-md-2">
            <input type="submit" value="Search" class="btn btn-outline-secondary w-100" />
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model[0].TransactionNumber)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Timestamp)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Amount)</th>
                    <th>@Html.DisplayNameFor(model => model[0].TransactionType)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Description)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Account)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TransactionNumber</td>
                        <td>@item.Timestamp.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@item.Amount.ToString("C")</td>
                        <td>@item.TransactionType</td>
                        <td>@item.Description</td>
                        <td>@item.Account.AccountNumber</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.TransactionId" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.TransactionId" class="btn btn-sm btn-outline-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.TransactionId" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Pagination">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.PageIndex - 1)"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-transactionTypeFilter="@ViewData["CurrentType"]"
                   asp-route-pageSizeID="@ViewData["pageSizeID"]">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-transactionTypeFilter="@ViewData["CurrentType"]"
                       asp-route-pageSizeID="@ViewData["pageSizeID"]">@i</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.PageIndex + 1)"
                   asp-route-searchString="@ViewData["CurrentFilter"]"
                   asp-route-transactionTypeFilter="@ViewData["CurrentType"]"
                   asp-route-pageSizeID="@ViewData["pageSizeID"]">Next</a>
            </li>
        </ul>
    </nav>
</div>
