@model BankApp.Models.Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="container mt-4">
    <h2 class="text-danger mb-3">Delete Transaction</h2>
    <p class="lead">Are you sure you want to delete this transaction?</p>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Transaction Number</dt>
                <dd class="col-sm-9">@Model.TransactionNumber</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Timestamp)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Timestamp)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Amount)</dt>
                <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TransactionType)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TransactionType)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">Account #</dt>
                <dd class="col-sm-9">@Model.Account?.AccountNumber</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="TransactionId" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
