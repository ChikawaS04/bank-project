@model BankApp.Helpers.PaginatedList<BankApp.Models.Account>
@using BankApp.Models

@{
    ViewData["Title"] = "Client Details";
    var client = (Client)ViewData["Client"];
}

<div class="container mt-4">
    <h2 class="mb-4">Client Details</h2>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">@client.ClientFirstName</dd>

                <dt class="col-sm-3">Middle Name</dt>
                <dd class="col-sm-9">@client.ClientMiddleName</dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">@client.ClientLastName</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@client.ClientPhone</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@client.ClientEmail</dd>

                <dt class="col-sm-3">Street</dt>
                <dd class="col-sm-9">@client.ClientStreetAddress</dd>

                <dt class="col-sm-3">Postal Code</dt>
                <dd class="col-sm-9">@client.ClientPostalCode</dd>

                <dt class="col-sm-3">City</dt>
                <dd class="col-sm-9">@client.ClientCityAddress</dd>

                <dt class="col-sm-3">Country</dt>
                <dd class="col-sm-9">@client.ClientCountryAddress</dd>
            </dl>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@client.ClientId" class="btn btn-warning">Edit</a>
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Accounts</h4>
        <a asp-controller="Accounts" asp-action="Create" asp-route-accountId="@client.ClientId" class="btn btn-primary">
            + Add Account
        </a>
    </div>

    <form asp-action="Details" method="get" class="form-inline mb-3">
        <input type="hidden" name="id" value="@client.ClientId" />
        <label for="pageSizeID" class="me-2">Page Size:</label>
        @Html.DropDownList("pageSizeID",
                 ViewData["pageSizeID"] as SelectList,
                 new { @class = "form-select form-select-sm", style = "width: 80px;", onchange = "this.form.submit();" })
    </form>

    @if (Model.Any())
    {
        <table class="table table-striped table-bordered align-middle">
            <thead>
                <tr>
                    <th>Account #</th>
                    <th>Type</th>
                    <th>Balance</th>
                    <th>Status</th>
                    <th>Open Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model)
                {
                    <tr>
                        <td>@account.AccountNumber</td>
                        <td>@account.AccountType</td>
                        <td>@account.Balance.ToString("C")</td>
                        <td>@account.Status</td>
                        <td>@account.OpenDate.ToShortDateString()</td>
                        <td>
                            <a asp-controller="Accounts" asp-action="Details" asp-route-id="@account.AccountId" class="btn btn-sm btn-outline-info">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mb-5">
            <nav aria-label="Pagination">
                <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Details" asp-route-id="@client.ClientId" asp-route-page="@(Model.PageIndex - 1)" asp-route-pageSizeID="@ViewData["pageSizeID"]">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" asp-action="Details" asp-route-id="@client.ClientId" asp-route-page="@i" asp-route-pageSizeID="@ViewData["pageSizeID"]">@i</a>
                    </li>
                }
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Details" asp-route-id="@client.ClientId" asp-route-page="@(Model.PageIndex + 1)" asp-route-pageSizeID="@ViewData["pageSizeID"]">Next</a>
                </li>
                </ul>
            </nav>
        </div>

    }
    else
    {
        <p class="text-muted"><em>This client has no accounts.</em></p>
    }
</div>
