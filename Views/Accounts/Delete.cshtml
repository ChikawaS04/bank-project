@model BankApp.Models.Account

@{
    ViewData["Title"] = "Delete Account";
}

<div class="container mt-4">
    <h2 class="text-danger mb-3">Delete Account</h2>
    <p class="lead">Are you sure you want to delete this account?</p>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Account Number</dt>
                <dd class="col-sm-9">@Model.AccountNumber</dd>

                <dt class="col-sm-3">Account Type</dt>
                <dd class="col-sm-9">@Model.AccountType</dd>

                <dt class="col-sm-3">Balance</dt>
                <dd class="col-sm-9">@Model.Balance.ToString("C")</dd>

                <dt class="col-sm-3">Opened On</dt>
                <dd class="col-sm-9">@Model.OpenDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Client</dt>
                <dd class="col-sm-9">@($"{Model.Client.ClientFirstName} {Model.Client.ClientLastName}")</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="AccountId" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
