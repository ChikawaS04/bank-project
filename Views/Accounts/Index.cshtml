@model BankApp.Helpers.PaginatedList<BankApp.Models.Account>

@{
    ViewData["Title"] = "Accounts";
}

<div class="container mt-4">
    <h1 class="display-6 mb-3">Accounts</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">+ Create New Account</a>
    </div>

    <form asp-action="Index" method="get" class="row g-3 align-items-center mb-4">
        <div class="col-md-4">
            <input type="text" name="searchString" value="@ViewData["CurrentSearch"]" class="form-control" placeholder="Search by Account # or Client Name" />
        </div>
        <div class="col-md-3">
            @Html.DropDownList("statusFilter", ViewData["StatusFilter"] as SelectList, "All Statuses", new { @class = "form-control" })
        </div>
        <div class="col-md-2">
            @Html.DropDownList("pageSizeID", ViewData["pageSizeID"] as SelectList, new { @class = "form-control", onchange = "this.form.submit();" })
        </div>
        <div class="col-md-2">
            <input type="submit" value="Search" class="btn btn-outline-secondary w-100" />
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model[0].AccountNumber)</th>
                    <th>@Html.DisplayNameFor(model => model[0].AccountType)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Balance)</th>
                    <th>@Html.DisplayNameFor(model => model[0].OpenDate)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Status)</th>
                    <th>@Html.DisplayNameFor(model => model[0].Client)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AccountNumber</td>
                        <td>@item.AccountType</td>
                        <td>@item.Balance.ToString("C")</td>
                        <td>@item.OpenDate.ToShortDateString()</td>
                        <td>@item.Status</td>
                        <td>@($"{item.Client.ClientFirstName} {item.Client.ClientLastName}")</td>
                        <td>
                            @if (item.Status != BankApp.Enums.AccountStatus.Closed)
                            {
                                <a asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-sm btn-outline-primary">Edit</a>
                            }
                            else
                            {
                                <span class="text-muted">Edit</span>
                            }
                            <a asp-action="Details" asp-route-id="@item.AccountId" class="btn btn-sm btn-outline-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Pagination">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.PageIndex - 1)"
                   asp-route-searchString="@ViewData["CurrentSearch"]"
                   asp-route-statusFilter="@ViewData["CurrentStatus"]"
                   asp-route-pageSizeID="@ViewData["pageSizeID"]">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchString="@ViewData["CurrentSearch"]"
                       asp-route-statusFilter="@ViewData["CurrentStatus"]"
                       asp-route-pageSizeID="@ViewData["pageSizeID"]">@i</a>
                </li>
            }
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.PageIndex + 1)"
                   asp-route-searchString="@ViewData["CurrentSearch"]"
                   asp-route-statusFilter="@ViewData["CurrentStatus"]"
                   asp-route-pageSizeID="@ViewData["pageSizeID"]">Next</a>
            </li>
        </ul>
    </nav>
</div>
